# Environment Variables Configuration
# For local development: Copy this file to .env.local and fill in your actual API keys
# For Vercel deployment: Add these variables to your Vercel dashboard

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Groq Configuration (OPTIONAL - for alternative LLM)
GROQ_API_KEY=your_groq_api_key_here

# AI Provider Preference (OPTIONAL)
# Set to "true" to prefer Groq (with OpenAI fallback)
# Set to "false" or leave unset to prefer OpenAI (with Groq fallback)
PREFER_GROQ=false

# Pinecone Configuration (REQUIRED)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=obbb

# Next.js Configuration
# Local development
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Production (update with your actual domain)
# NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Rate Limiting (OPTIONAL - recommended for production)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Database Configuration (OPTIONAL - currently unused)
DATABASE_URL=your_database_connection_string_here

# Supabase (OPTIONAL - fallback vector store, currently unused)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here